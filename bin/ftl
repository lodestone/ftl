#!/usr/bin/env ruby
$LOAD_PATH << 'lib'
require 'optparse'
require 'ftl'


options = {}
optparse = OptionParser.new do |opts|

  opts.on('-h', '--help', "Display this message") do
    puts Ftl.help_message
    exit
  end

  opts.on('-h', '--headers FILE', Array, "provide custom config file") do |headers|
    options[:headers] = headers
  end

  opts.on('-c', '--config FILE', "provide custom config file") do
    puts "Supplied config file"
    puts opts
  end

end


optparse.parse!

p options
p ARGV 


Ftl::Client.new(ARGV, options)

